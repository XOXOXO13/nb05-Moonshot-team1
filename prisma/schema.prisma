generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SocialAccount {
  id         String   @id @default(uuid())
  provider   String
  providerId String
  createdAt  DateTime @default(now())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider])
  @@unique([provider, providerId])
}

model User {
  id              String   @id @default(uuid())
  email           String   @unique
  password        String?
  name            String
  refreshToken    String?
  version         Int      @default(1)
  profileImageUrl String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  socialAccounts      SocialAccount[]
  projects            Project[]
  userJoinProjects    UserJoinProject[]
  assignedTasks       Task[]
  comments            Comment[]
  invitationsCreated  Invitation[]      @relation("CreatorInvitations")
  invitationsReceiced Invitation[]      @relation("InviteeInvitations")
}

model UserJoinProject {
  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  status   MemberStatus @default(ACTIVE)
  joinedAt DateTime     @default(now())

  @@id([userId, projectId])
}

enum MemberStatus {
  ACTIVE
  INVITED
  LEFT
}

model Project {
  id          String            @id @default(uuid())
  name        String
  description String?
  userId      String
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks       Task[]
  members     UserJoinProject[]
  invitations Invitation[]
}

model Task {
  id        String    @id @default(uuid())
  projectId String
  title     String
  startDate DateTime?
  endDate   DateTime?
  status    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  assigneeId String?
  assignee   User?     @relation(fields: [assigneeId], references: [id], onDelete: SetNull)
  project    Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  comments   Comment[]
  tags       Tag[]
  files      File[]
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  taskId String
  task   Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Tag {
  id     String @id @default(uuid())
  name   String
  taskId String
  task   Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

model File {
  id      String @id @default(uuid())
  taskId  String
  task    Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)
  fileUrl String
}

model Invitation {
  token String @id @default(uuid())

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  inviteeId String
  invitee   User   @relation(fields: [inviteeId], references: [id], onDelete: Cascade, name: "InviteeInvitations")

  creatorId String
  creator   User   @relation(fields: [creatorId], references: [id], onDelete: Cascade, name: "CreatorInvitations")

  expiresAt DateTime
  createdAt DateTime @default(now())

  @@unique([projectId, inviteeId]) // 중복 초대 방지
}
